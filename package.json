{
  "name": "util",
  "version": "1.0.0",
  "description": "",
  "main": "{{lib/src}}/index.js",
  "types": "index.ts",
  "scripts": {
    "test": "shx echo \"Error: no test specified\" && exit 1",
    "clean": "shx rm -rf _bundles lib lib-esm",
    "serve": "nodemon --watch webpack.config.js --exec \"webpack-dev-server  --progress --colors --env=server --config config/webpack.config.js\"",
    "build": "npm run clean && tsc && tsc -m es6 --outDir lib-esm && npm run copy:packagejson && webpack --env=prod --config config/webpack.config.js",
    "build:watch": "npm run clean && tsc && tsc -m es6 --outDir lib-esm && npm run copy:packagejson  && webpack -w --env=prod --config config/webpack.config.js",
    "webpack": "webpack --display-error-details --env=prod --config config/webpack.config.js",
    "webpack:prod": "webpack -p --progress --config=config/webpack.prod.js",
    "webpack:dev": "webpack -p --progress --config=config/webpack.dev.js",
    "webpack:analyzer-generate-json": "webpack --profile --json > stats.json",
    "webpack:analyze": "npm run webpack:analyzer-generate-json && webpack-bundle-analyzer stats.json",
    "webpack4:smart:test": "webpack -r esm --env=development --config test/webpack.config.js"
  },
  "author": "Thomas Milotti",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^10.5.4",
    "ts-node": "^6.1.1",
    "tslint": "^5.10.0"
  },
  "dependencies": {
    "rimraf": "^2.6.2",
    "tmp": "^0.0.33",
    "tsconfig": "^7.0.0",
    "typescript": "^2.9.2"
  }
}
